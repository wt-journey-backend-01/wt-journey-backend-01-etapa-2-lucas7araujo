{
    "openapi": "3.0.0",
    "info": {
        "title": "API Departamento de Polícia",
        "description": "Essa API Rest tem como objetivo servir às necessidades da polícia em gerenciar casos e funcionários.",
        "version": "1.0.0",
        "contact": {
            "name": "Lucas Araújo",
            "email": "lucasgabrielz2108@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Ambiente com dados da polícia"
        }
    ],
    "paths": {
        "/casos": {
            "get": {
                "summary": "Retorna todos os casos.",
                "description": "Essa rota será reponsável por retornar todos os casos listados no banco de dados da Polícia",
                "tags": [
                    "Casos"
                ],
                "responses": {
                    "200": {
                        "description": "Retorna todos os casos",
                        "content": {
                            "aplication/json": {
                                "schemma": {
                                    "type": "array",
                                    "examples": [
                                        {
                                            "id": "f5fb2ad5-22a8-4cb4-90f2-8733517a0d46",
                                            "titulo": "homicidio",
                                            "descricao": "Disparos foram reportados às 22:33 do dia 10/07/2007 na região do bairro União, resultando na morte da vítima, um homem de 45 anos.",
                                            "status": "aberto",
                                            "agente_id": "401bccf5-cf9e-489d-8412-446cd169a0f1"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum caso foi encontrado."
                    }
                }
            },
            "post": {
                "summary": "Adiciona um novo caso.",
                "description": "Essa rota será reponsável por retornar adicionar um novo caso no banco de dados da Polícia",
                "tags": [
                    "Casos"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemmas/Post"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Adiciona um novo caso",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "array",
                                    "examples": [
                                        {
                                            "id": "f5fb2ad5-22a8-4cb4-90f2-8733517a0d46",
                                            "titulo": "homicidio",
                                            "descricao": "Disparos foram reportados às 22:33 do dia 10/07/2007 na região do bairro União, resultando na morte da vítima, um homem de 45 anos.",
                                            "status": "aberto",
                                            "agente_id": "401bccf5-cf9e-489d-8412-446cd169a0f1"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum caso foi encontrado."
                    }
                }
            }
        },
        "/agentes": {
            "get": {
                "summary": "Retorna todos os agentes.",
                "description": "Essa rota será reponsável por retornar todos os agentes listados no banco de dados da Polícia",
                "tags": [
                    "Agentes"
                ],
                "responses": {
                    "200": {
                        "description": "Retorna todos os agentes",
                        "content": {
                            "aplication/json": {
                                "schemma": {
                                    "type": "array",
                                    "examples": [
                                        {
                                            "id": "401bccf5-fg5b-489d-8412-10baj3k9a0f1",
                                            "nome": "Lucas Araújo",
                                            "dataDeIncorporacao": "2022/08/08",
                                            "cargo": "investigador"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum agente foi encontrado."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Caso": {
                "type": "object",
                "required": [
                    "id",
                    "titulo",
                    "descricao",
                    "status",
                    "agente_id"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "titulo": {
                        "type": "string"
                    },
                    "descricao": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "aberto",
                            "encerrado"
                        ]
                    },
                    "agente_id": {
                        "type": "string",
                        "format": "uuid"
                    }
                }
            },
            "Agente": {
                "type": "object",
                "required": [
                    "id",
                    "nome",
                    "dataDeIncorporacao",
                    "cargo"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "dataDeIncorporacao": {
                        "type": "string",
                        "format": "date"
                    },
                    "cargo": {
                        "type": "string"
                    }
                }
            }
        }
    }
}